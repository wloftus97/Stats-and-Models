def pearson_correlation(x, y):
  if len(x) != len(y):
    raise ValueError('x and y must be the same length!')
  n = len(x)
  sum_x = sum(x)
  sum_y = sum(y)
  sum_xy = sum(xi * yi for xi, yi in zip(x, y)
  sum_x_sqrd = sum(xi ** 2 for xi in x)
  sum_y_sqrd = sum(yi ** 2 for yi in y)
  numerator = sum_xy - sum_x * sum_y
  denominator = ((n * sum_x_sqrd - sum_x ** 2) * (n * sum_y_sqrd - sum_y ** 2)) ** 0.5
